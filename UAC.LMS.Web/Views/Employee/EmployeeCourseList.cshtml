@section scripts{
    @Scripts.Render("~/bundles/EmployeeCourseList")
    <script>
        $(document).ready(function () {
            LoadGrid("employeeCoursesRepeater");
            $('#searchStatusCode').selectpicker();
            if (document.getElementById("hdnPermission").value == "ReadOnly") {
                $('#btnAdd').addClass('disabled');
                $('#btnAddOrient').addClass('disabled');
            }
        });
    </script>
}
