<div class="panel-heading">List of Employees Courses</div>
<div class="panel-body">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <button id="btnAdd" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Add Courses</button>
                <button id="btnAddOrient" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Add InitialOrientation Courses</button>
                @* remove comments while adding JOB TITLES COURSES *@
                <button id="btnAddCourse" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Add Job Title Courses</button>
            </div>
            <div class="col-md-3 col-md-offset-1">
                <button id="btnBack" onclick="window.history.back();" class="btn btn-success btn-large"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
            </div>
        </div>
    </div>
    <div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="FullName" class="cols-sm-2 control-label">Name</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                            <input disabled="disabled" type="text" value="@Model.FullName" id="FullName" name="FullName" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="EmployeeNo" class="cols-sm-2 control-label">Employee No</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                            <input type="text" disabled="disabled" value="@Model.EmployeeNo" id="EmployeeNo" name="EmployeeNo" class="form-control" placeholder="Enter Employee No" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="LMSDepartmentId" class="cols-sm-2 control-label">Department</label>
                    <div class="cols-sm-10">
                        <input type="text" disabled="disabled" value="@Model.DepartmentName" id="LMSDepartmentId" name="LMSDepartmentId" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="LMSJobTitleId" class="cols-sm-2 control-label">Job Title</label>
                    <div class="cols-sm-10">
                        <input type="text" disabled="disabled" value="@Model.JobTitleName" id="LMSJobTitleId" name="LMSJobTitleId" class="form-control" />
                        <input type="hidden" name="hdnJobTitleId" id="hdnJobTitleId" value="@Model.JobTitleId" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Shift" class="cols-sm-2 control-label">Shift</label>
                    <div class="cols-sm-10">
                        <input type="text" disabled="disabled" value="@Model.Shift" id="LMSJobTitleId" name="LMSJobTitleId" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="HireDate" class="cols-sm-2 control-label">Hire Date</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <div class="input-group date">
                                <input value="@Model.StrHireDate" disabled="disabled" type="text" id="HireDate" name="HireDate" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    @*// Changed  Business Unit to  Location 11/21/2016
                        <label for="LMSBusinessUnitId" class="cols-sm-2 control-label">Business Unit</label>*@
                    <label for="LMSBusinessUnitId" class="cols-sm-2 control-label">Location</label>
                    <div class="cols-sm-10">
                        <input type="text" disabled="disabled" value="@Model.BusinessUnitName" id="LMSBusinessUnitId" name="LMSBusinessUnitId" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchStatusCode" class="cols-sm-2 control-label">Employee Status</label>
                    <div class="cols-sm-10">
                        <input type="text" disabled="disabled" value="@Model.Status" id="LMSStatus" name="LMSStatus" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{Html.RenderPartial("_Repeater", "employeeCoursesRepeater");}
</div>
